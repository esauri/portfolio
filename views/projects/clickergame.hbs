            <button class='gallery-btn-next js-gallery-next icon ion-ios-arrow-right'></button>
          </li>
        </ul> 
      </section>
      <section class='gallery-container'>
        <ul class='gallery'>
          <li class='gallery-item active'>
            <img class='gallery-img' data-action='zoom' src='./img/clickergame/screens/pausegame.png' alt=''>
          </li>
          <li class='gallery-item'>
            <img class='gallery-img' data-action='zoom' src='./img/clickergame/screens/gameover.png' alt=''>
